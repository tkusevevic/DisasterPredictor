<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:elevation="4dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/dateText"
                    style="@style/HeadingTextView"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Date: "/>


            <TextView
                    android:id="@+id/dateInput"
                    android:textStyle="bold"
                    style="@style/HeadingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="2020-22-31"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/confirmedText"
                    style="@style/HeadingTextView"
                    android:layout_width="match_parent"
                    android:textSize="20sp"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Confirmed: "/>


            <TextView
                    android:id="@+id/confirmedInput"
                    style="@style/HeadingTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="12345"/>
        </LinearLayout>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/deathText"
                    style="@style/HeadingTextView"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Deaths: "/>


            <TextView
                    android:id="@+id/deathInput"
                    style="@style/HeadingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="12345"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/recoveredText"
                    style="@style/HeadingTextView"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Recovered: "/>


            <TextView
                    android:id="@+id/recoveredInput"
                    style="@style/HeadingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="12345"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/activeText"
                    style="@style/HeadingTextView"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Active: "/>


            <TextView
                    android:id="@+id/activeInput"
                    style="@style/HeadingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="12345"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
