<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="HeadingTextView" parent="TextAppearance.AppCompat">
        <item name="android:layout_margin">@dimen/marginLarge</item>
        <item name="android:textSize">@dimen/textSizeHeading</item>
    </style>

    <style name="FragmentDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">@color/like_red</item>
        <item name="colorControlActivated">@color/main_red</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

</resources>
